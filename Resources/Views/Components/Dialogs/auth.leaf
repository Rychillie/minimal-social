<dialog class="auth">
    <div class="steps">
        <div class="options">
            <h3>
                Login to your account
                <span role="img" aria-label="wave" style="white-space: nowrap;">&nbsp;ðŸ‘‹</span>
            </h3>
            <p>
                By continuing you agree to our <a href="#" target="_blank">terms of service</a> and <a href="#" target="_blank">privacy policy</a>.
            </p>
    
            <div class="auth-group">
                <button class="signin-google" data-style="normal" data-loading="false">
                    #extend("Components/Icons/google")
                    Continue with Google
                </button>

                <button class="signin-apple" data-style="normal" data-loading="false">
                    #extend("Components/Icons/apple")
                    Continue with Apple
                </button>
                
                <button class="signin-magic-link" data-style="normal" data-loading="false">
                    Continue with email
                </button>
            </div>
        </div>

        <div class="email">
            <h3>Continue with an email link<span role="img" aria-label="heart envelope" style="white-space: nowrap;">&nbsp;ðŸ’Œ</span></h3>
            <p>Enter your email and we'll send you a link to login to your account.</p>
            
            <input
                autocomplete="chrome-off"
                type="email"
                spellcheck="false"
                placeholder="Email address"
                data-lowercase="false"
                value=""
                data-error="false"
            />
            
            <div class="group-buttons">
                <button class="back" data-mobile="false">Back</button>
                <button class="next" data-mobile="false">Submit</button>
            </div>
        </div>

        <div class="check">
            <div class="group-buttons">
                <button class="back" data-mobile="false">Back</button>
                <button class="next" data-mobile="false">Done</button>
            </div>
        </div>
    </div>
</dialog>